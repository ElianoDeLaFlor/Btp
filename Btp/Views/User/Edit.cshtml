@model Btp.Models.Users

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Site_Layout.cshtml";
}

<h2>Edit</h2>
<div class="p-2" style="margin:auto">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
