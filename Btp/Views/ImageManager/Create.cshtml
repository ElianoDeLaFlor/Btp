@model Btp.Models.ImageManager

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Site_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Index","ImageManager",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ImageManager</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-6">
                <img src="~/Images/2.jpg" height="300" class="imgbord" id="img1"/>
                <input id="up1" type="file"/>
                <button id="btnok" type="submit">Save</button>
            </div>
            <div class="col-md-6">
                <span class="descriptitle" id="tl">Title</span>
                <p>Description</p>
            </div>
        </div>
 </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
        var fileinput = document.querySelector('#up1');
        var t = document.getElementById('tl');
        fileinput.onchange = function () {
            var file = this.files[0];
            createThumbnail(file);
            t.innerText = file.name;
        }
    function createThumbnail(file) {
        var reader = new FileReader();
        reader.onload = function () {
            // Affichage de l'image
            var imgElement = document.getElementById('img1');
            //imgElement.style.maxHeight = '300px';
            imgElement.src = this.result;
        };
        reader.readAsDataURL(file);
    }
   
</script>